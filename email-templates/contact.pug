	table(width="100%" align="center" cellspacing="0" cellpadding="0" border="0"): tr
		td(width="100%" style="padding-top: 15px")
			table(width="100%" align="center" style="background-color: #1C541D;" cellspacing="0" cellpadding="0" border="0"): tr
				td(width="100%" style="padding: 45px 0 35px;")
